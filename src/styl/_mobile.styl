/*
----------------------- HEADER ---------------------- */
header
  background-color: $white
  border-bottom: 1px solid $light-gray
  box-shadow: 0px -5px 10px rgba(0,0,0,0.3)
  left: 0
  margin-bottom: 1em
  position: fixed
  right: 0
  width: 100%
  z-index: 100

.logo
  font-size: rem(16px)
  line-height: 1

/*
----------------------- SITE NAV ---------------------- */
nav
  font-family: $sans-serif
  transition: 0.3s $ease-out-swift
  ul
    justify-content: space-between
    a
      link: $red
+below($tablet-breakpoint)
  nav
    background-color: rgba($light-gray, 0.95)
    box-shadow: 0px 0 5px rgba(0,0,0,0.2)
    height: 100vh
    padding-top: 2em
    position: fixed
    right: -100%
    text-align: center
    width: 100%
    .is-active &
      right: 0%
    ul
      height: 30%



/*
----------------------- SLOPE CONTAINER + SLOPES + FIXES ---------------------- */
.slope-container
  background-color: $white
  display: block
  width: 100%
  overflow: hidden
  padding-top: 100px

//------------------ SLOPE DIRECTIONS
.slope-left
  margin: 0 -150px
  transform: rotate(-7deg)
  transform-origin: left center
  .container
    width: 60%
.slope-right
  margin: 0 -50px
  transform: rotate(7deg)
  transform-origin: left center

//------------------ SLOPE FIXES
.slope-left-fix
  margin: 0 auto
  transform: rotate(7deg)
  width: 80%
.slope-right-fix
  margin: 0 auto
  transform: rotate(-7deg)
  width: 80%


//------------------ SLOPE Z POSITIONS
.slope-over
  box-shadow: 0px 8px 10px rgba(0,0,0,0.2)
  position: relative
  z-index: 5
.slope-under
  box-shadow: 0px -5px 10px rgba(0,0,0,0.3)
  position: relative
  z-index: 1


//------------------ SLOPE SPACERS
.spacer
  padding: 5em 0
  position: relative
.mint
  background-color: $mint
.mustard
  background-color: $yellow
.red
  background-color: $red
  .border
    background $red url('../img/border.png') top center repeat

.purple
  background-color: $light-purple
  .border
    background $light-purple url('../img/border.png') top center repeat

.is-upper
  margin-top: -150px
.border
  height 33px
  position absolute
  width 100%
  top 20px
  z-index 10



/*
----------------------- CIRCLES ---------------------- */
.circles
  align-items: center
  flex-direction: row
  justify-content: center
  margin-top: -20px
  margin-bottom: rem(50px)
.circle
  height: 20px
  margin-left: 3px
  margin-right: 3px
  width: 20px
  border-radius: 50%
.orange
  .circle
    background-color: $orange
.purple
  .circle
    background-color: $dark-purple




/*
----------------------- BIO ---------------------- */
.bio
  background-color: $white
  padding-bottom: 80px

    
/*
----------------------- RESOURCES ---------------------- */
.resources
  background-color: $red
  color: $white
  padding-bottom: 80px

/*
----------------------- PUBLICATIONS ---------------------- */
.publications
  background-color: $light-purple
  color: $white
  padding-bottom: 80px





/*
----------------------- QUOTES ---------------------- */
.quotes
  background-color: $yellow
  margin-top: -175px
  padding-bottom: 5em
  padding-top: 12em
  
  p
    color: $white
    font-size: rem(28px)





/*
----------------------- SITE FOOTER ---------------------- */
.site-footer
  background-color: $dark-primary
  color: $white


