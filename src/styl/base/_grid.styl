// stolen from:
// https://github.com/philipwalton/solved-by-flexbox/blob/master/assets/css/components/grid.css

.container
  margin: 0 auto
  
.grid
  display: flex
  flex-wrap: wrap
  list-style: none
  margin: 0
  padding: 0


.grid-column
  flex-direction: column
  // responsive
  +below($tablet-breakpoint)
    &--small
      flex-direction: column


.grid-cell
  flex: 1

  // MODIFIERS
  &.--full
    flex: 0 0 100%

  &.--1of2
    flex: 0 0 50%


  &.--1of3
    flex: 0 0 33.3333%

  &.--1of4
    flex: 0 0 25%

  &.--3of4
    flex: 0 0 75%
  
  &.to-right
    margin-left: auto
    
  &.to-left
    align-self: flex-start




.grid--flexCells > .grid-cell
  display: flex

.grid-gutters
  .grid-cell
    padding-left: 2%
    padding-right: 2%
  &--large
    .grid-cell
      padding-left: 5%
      padding-right: 5%


.grid-margins
  .grid-cell
    margin-top: 1em
    margin-bottom: 1em
  &--large
    .grid-cell
      margin-top: 5em
      margin-bottom: 2em

.grid--top
  align-items: flex-start


.grid--bottom
  align-items: flex-end


.grid--center
  align-items: center


.grid--justifyCenter
  justify-content: center


.grid-cell--top
  align-self: flex-start


.grid-cell--bottom
  align-self: flex-end


.grid-cell--center
  align-self: center


.grid-cell--autoSize
  flex: none


.grid--fit > .grid-cell
  flex: 1


.grid--full > .grid-cell
  flex: 0 0 100%


.grid--1of2 > .grid-cell
  flex: 0 0 50%


.grid--1of3 > .grid-cell
  flex: 0 0 33.3333%


.grid--1of4 > .grid-cell
  flex: 0 0 25%


+below($tablet-breakpoint)
  .container
    max-width: 85%

  .small-grid--fit > .grid-cell
    flex: 1
    
  .small-grid--full > .grid-cell
    flex: 0 0 100%

  .small-grid--1of2 > .grid-cell
    flex: 0 0 50%

  .small-grid--1of3 > .grid-cell
    flex: 0 0 33.3333%

  .small-grid--1of4 > .grid-cell
    flex: 0 0 25%



+above($tablet-breakpoint)
  .container
    max-width: 80%

  .med-grid--fit > .grid-cell
    flex: 1

  .med-grid--full > .grid-cell
    flex: 0 0 100%

  .med-grid--1of2 > .grid-cell
    flex: 0 0 50%

  .med-grid--1of3 > .grid-cell
    flex: 0 0 33.3333%

  .med-grid--1of4 > .grid-cell
    flex: 0 0 25%



+above($desktop-breakpoint)
  .container
    max-width: 70%

  .large-grid--fit > .grid-cell
    flex: 1

  .large-grid--full > .grid-cell
    flex: 0 0 100%

  .large-grid--1of2 > .grid-cell
    flex: 0 0 50%

  .large-grid--1of3 > .grid-cell
    flex: 0 0 33.3333%

  .large-grid--1of4 > .grid-cell
    flex: 0 0 25%



