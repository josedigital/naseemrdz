// stolen from:
// https://github.com/philipwalton/solved-by-flexbox/blob/master/assets/css/components/grid.css

.container
  margin: 0 auto
  
.grid
  display: flex
  flex-wrap: wrap
  list-style: none
  margin: 0
  padding: 0


.grid-column
  flex-direction: column
  // responsive - turn into column for small screens: .grid.grid-column--small
  +below($tablet-breakpoint)
    &--small
      flex-direction: column


.grid-cell
  flex: 1

  // MODIFIERS
  &.cell--full
    flex: 0 0 100%

  &.cell--1of2
    flex: 0 0 50%


  &.cell--1of3
    flex: 0 0 33.3333%

  &.cell--1of4
    flex: 0 0 25%

  &.cell--3of4
    flex: 0 0 75%
  
  &.to-right
    margin-left: auto
    
  &.to-left
    align-self: flex-start




// UNITS => APPLY TO .grid-cell
.u-full
  width: 100% !important
  flex: none !important

.u-1of2
  width: 50% !important
  flex: none !important

.u-1of3
  width: 33.3333% !important
  flex: none !important

.u-2of3
  width: 66.6667% !important
  flex: none !important

.u-1of4
  width: 25% !important
  flex: none !important

.u-3of4
  width: 75% !important
  flex: none !important






.grid--flexCells > .grid-cell
  display: flex




.grid-margins
  .grid-cell
    margin-top: 1em
    margin-bottom: 1em
  &--large
    .grid-cell
      margin-top: 5em
      margin-bottom: 2em





// ALIGN COLUMNS TOP CENTER OR BOTTOM of EACH OTHER => APPLY TO .grid
.grid--top
  align-items: flex-start


.grid--bottom
  align-items: flex-end


.grid--center
  align-items: center


.grid--justifyCenter
  justify-content: center






// ALIGN INDIVIDUAL CELL TOP CENTER OR BOTTOM => APPLY TO .grid-cell
.grid-cell--top
  align-self: flex-start


.grid-cell--bottom
  align-self: flex-end


.grid-cell--center
  align-self: center


.grid-cell--autoSize
  flex: none









